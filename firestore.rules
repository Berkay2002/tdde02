rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // User profile: one document per user, id == uid
    match /profiles/{userId} {
      allow read, write: if isOwner(userId);
    }

    // User preferences: one document per user, id == uid
    match /user_preferences/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Recipes: documents include user_id field
    match /recipes/{recipeId} {
      // Ensure creator sets their own uid on create
      allow create: if isSignedIn() && request.resource.data.user_id == request.auth.uid;

      // Only owner can read/update/delete their recipe
      allow read, update, delete: if isSignedIn() && resource.data.user_id == request.auth.uid;
    }

    // Recipe cache: stores generated recipes per user+ingredient combination
    match /recipe_cache/{cacheId} {
      // Cache ID format: {userId}_{cacheKey}
      // Extract userId from cache ID (everything before the first underscore)
      function getCacheUserId() {
        return cacheId.split('_')[0];
      }
      
      // Allow read if signed in and cache belongs to user
      allow read: if isSignedIn() && getCacheUserId() == request.auth.uid;
      
      // Allow write/update if signed in, cache belongs to user, and user_id field matches
      allow write, update: if isSignedIn() && 
                              getCacheUserId() == request.auth.uid &&
                              request.resource.data.user_id == request.auth.uid;
      
      // Allow create if signed in and user_id matches auth
      allow create: if isSignedIn() && request.resource.data.user_id == request.auth.uid;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
